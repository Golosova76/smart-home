# ANSI-последовательности как строки с \033
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

printf "\n%b🧹 Pre-commit started...%b\n" "$YELLOW" "$NC"
printf "───────────────────────────────\n"
printf "%b✨ Running lint-staged (ESLint, Prettier, Stylelint)...%b\n" "$GREEN" "$NC"

FORCE_COLOR=1 npx lint-staged --verbose

printf "\n%b✅ Code linting & formatting complete!%b\n" "$GREEN" "$NC"
printf "───────────────────────────────\n"
