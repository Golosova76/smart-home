# ANSI-последовательности как строки с \033
PURPLE='\033[1;35m'
GREEN='\033[0;32m'
NC='\033[0m'

printf "\n%b🧹 Pre-commit started...%b\n" "$PURPLE" "$NC"
printf "───────────────────────────────\n"

printf "%b✨ Running lint-staged (ESLint, Prettier, Stylelint)...%b\n" "$PURPLE" "$NC"
FORCE_COLOR=1 npx lint-staged --verbose

printf "\n%b✅ Code linting & formatting complete!%b\n" "$GREEN" "$NC"
printf "───────────────────────────────\n"
